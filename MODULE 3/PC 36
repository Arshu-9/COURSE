import 'package:flutter/material.dart';

void main() {
  runApp(const HoverTextApp());
}

class HoverTextApp extends StatelessWidget {
  const HoverTextApp({super.key});

  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      debugShowCheckedModeBanner: false,
      home: HoverTextExample(),
    );
  }
}

class HoverTextExample extends StatefulWidget {
  @override
  _HoverTextExampleState createState() => _HoverTextExampleState();
}

class _HoverTextExampleState extends State<HoverTextExample> {
  bool isHovered = false;

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(title: const Text("Animated Hover Text")),
      body: Center(
        child: MouseRegion(
          onEnter: (_) => setState(() => isHovered = true),
          onExit: (_) => setState(() => isHovered = false),
          child: AnimatedDefaultTextStyle(
            duration: const Duration(milliseconds: 300),
            curve: Curves.easeInOut,
            style: TextStyle(
              fontSize: isHovered ? 50 : 30,
              color: isHovered ? Colors.blue : Colors.black,
              fontWeight: isHovered ? FontWeight.bold : FontWeight.normal,
            ),
            child: const Text("Hover Over Me"),
          ),
        ),
      ),
    );
  }
}
